@page
@model MegaDesk.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.FirstName" class="control-label"></label>
                <input asp-for="DeskQuote.FirstName" class="form-control" />
                <span asp-validation-for="DeskQuote.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.LastName" class="control-label"></label>
                <input asp-for="DeskQuote.LastName" class="form-control" />
                <span asp-validation-for="DeskQuote.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Width" class="control-label"></label>
                <input min="24" max="96" value="24" asp-for="DeskQuote.Width" class="form-control" />
                <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Depth" class="control-label"></label>
                <input min="12" max="48" value="12" asp-for="DeskQuote.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DrawerCount" class="control-label"></label>
                <input min="0" max="7" value="0" asp-for="DeskQuote.DrawerCount" class="form-control" />
                <span asp-validation-for="DeskQuote.DrawerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DesktopMaterial" class="control-label"></label>
                <select asp-for="DeskQuote.DesktopMaterial" asp-items="Model.Materials" class="form-control"></select>
                <span asp-validation-for="DeskQuote.DesktopMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.ProductionDays" class="control-label"></label>
                <select asp-for="DeskQuote.ProductionDays" class="form-control">
                    <option value="14">14 days (standard)</option>
                    <option value="7">7 days</option>
                    <option value="5">5 days</option>
                    <option value="3">3 days</option>
                </select>
                <span asp-validation-for="DeskQuote.ProductionDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="DeskQuote.QuoteDate" value="@DateTime.Now" />
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
